<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normal_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="small_text_style">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="settings_btn_style">
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>